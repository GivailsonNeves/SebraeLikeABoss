<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/homeBackground"
    android:layout_height="match_parent"
    android:id="@+id/vMain"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/bg_home" />

    <ImageView
        android:layout_marginTop="@dimen/margin_dots"
        android:layout_marginLeft="@dimen/margin_dots"
        android:layout_width="@dimen/width_dots"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/dots_front" />

    <ImageView
        android:layout_width="@dimen/width_logo_home"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>